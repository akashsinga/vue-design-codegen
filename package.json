{
  "name": "vue-design-codegen",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "description": "Zero-Overhead Design System: Configuration-driven Vue.js design system with instant library migration",
  "author": "akashsinga@gmail.com",
  "license": "MIT",
  "scripts": {
    "build": "node src/scripts/build.js",
    "build:vuetify": "node src/scripts/build.js --library=vuetify --bundle=treeshake",
    "build:primevue": "node src/scripts/build.js --library=primevue --bundle=treeshake",
    "generate": "node src/scripts/generate.js generate",
    "validate": "node src/scripts/generate.js validate",
    "migrate": "node src/scripts/generate.js migrate",
    "dev": "vite",
    "preview": "vite preview"
  },
  "main": "src/index.js",
  "exports": {
    ".": {
      "import": "./src/index.js",
      "types": "./src/types/index.d.ts"
    },
    "./plugin": {
      "import": "./src/core/plugins/DesignSystemPlugin.js"
    }
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "peerDependencies": {
    "vue": "^3.3.0"
  },
  "peerDependenciesMeta": {
    "vuetify": {
      "optional": true
    },
    "primevue": {
      "optional": true
    }
  },
  "devDependencies": {
    "@babel/core": "^7.28.3",
    "@babel/generator": "^7.28.3",
    "@babel/parser": "^7.28.3",
    "@babel/traverse": "^7.28.3",
    "@babel/types": "^7.28.2",
    "@rollup/plugin-commonjs": "^25.0.0",
    "@rollup/plugin-node-resolve": "^15.0.0",
    "@rollup/plugin-terser": "^0.4.0",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vue/compiler-sfc": "^3.5.21",
    "chalk": "^5.6.0",
    "chokidar": "^4.0.3",
    "commander": "^12.1.0",
    "fs-extra": "^11.3.1",
    "glob": "^11.0.3",
    "primevue": "^3.53.1",
    "rollup": "^4.0.0",
    "rollup-plugin-postcss": "^4.0.2",
    "rollup-plugin-vue": "^6.0.0",
    "vite": "^7.1.2",
    "vue": "^3.5.20",
    "vuetify": "^3.7.2"
  },
  "dependencies": {
    "@babel/core": "^7.28.3",
    "@babel/generator": "^7.28.3",
    "@babel/parser": "^7.28.3",
    "@babel/traverse": "^7.28.3",
    "@babel/types": "^7.28.2",
    "chalk": "^5.6.0",
    "chokidar": "^4.0.3",
    "commander": "^12.1.0",
    "fs-extra": "^11.3.1",
    "glob": "^11.0.3"
  }
}
