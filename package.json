{
  "name": "vue-design-codegen",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "description": "Zero-Overhead Design System: Configuration-driven Vue.js design system with instant library migration",
  "author": "akashsinga@gmail.com",
  "license": "MIT",
  "scripts": {
    "dev": "vite --host",
    "build": "node src/cli/build.js",
    "generate": "node src/cli/generate.js",
    "generate-all": "node src/cli/generate.js generate-all",
    "migrate": "node src/cli/generate.js migrate",
    "list": "node src/cli/generate.js list",
    "validate": "node src/cli/generate.js validate"
  },
  "main": "src/index.js",
  "exports": {
    ".": {
      "import": "./src/index.js",
      "types": "./src/types/index.d.ts"
    },
    "./plugin": {
      "import": "./src/core/plugins/DesignSystemPlugin.js"
    },
    "./utils": {
      "import": "./src/utils/index.js"
    }
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "peerDependencies": {
    "vue": "^3.3.0"
  },
  "peerDependenciesMeta": {
    "vuetify": {
      "optional": true
    },
    "primevue": {
      "optional": true
    }
  },
  "devDependencies": {
    "vite": "^7.1.2",
    "vue": "^3.5.20",
    "vuetify": "^3.7.2",
    "primevue": "^3.53.1"
  },
  "dependencies": {
    "@babel/core": "^7.28.3",
    "@babel/generator": "^7.28.3",
    "@babel/parser": "^7.28.3",
    "@babel/traverse": "^7.28.3",
    "@babel/types": "^7.28.2",
    "chalk": "^5.6.0",
    "chokidar": "^4.0.3",
    "commander": "^12.1.0",
    "fs-extra": "^11.3.1",
    "glob": "^11.0.3"
  }
}